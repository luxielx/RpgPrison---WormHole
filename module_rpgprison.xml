  <patternset id="excluded.from.module.rpgprison">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.rpgprison">
    <patternset refid="compiler.excluded"/>
    <patternset refid="excluded.from.module.rpgprison"/>
  </patternset>
  
  <path id="rpgprison.module.sourcepath">
    <dirset dir="${module.rpgprison.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.rpgprison" depends="compile.module.rpgprison.production,compile.module.rpgprison.tests" description="Compile module RpgPrison"/>
  
  <target name="compile.module.rpgprison.production" depends="register.custom.compilers" description="Compile module RpgPrison; production classes">
    <mkdir dir="${rpgprison.output.dir}"/>
    <javac2 destdir="${rpgprison.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.rpgprison}/javac">
      <compilerarg line="${compiler.args.rpgprison}"/>
      <bootclasspath refid="rpgprison.module.bootclasspath"/>
      <classpath refid="rpgprison.module.production.classpath"/>
      <src refid="rpgprison.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.rpgprison"/>
    </javac2>
    
    <copy todir="${rpgprison.output.dir}">
      <fileset dir="${module.rpgprison.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
        <patternset refid="excluded.from.compilation.rpgprison"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.rpgprison.tests" depends="register.custom.compilers,compile.module.rpgprison.production" description="compile module RpgPrison; test classes" unless="skip.tests"/>
  
  <target name="clean.module.rpgprison" description="cleanup module">
    <delete dir="${rpgprison.output.dir}"/>
    <delete dir="${rpgprison.testoutput.dir}"/>
  </target>
